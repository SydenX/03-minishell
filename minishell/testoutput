#include "minishell.h"

void	pwd()
{
	char	cwd[1025];

	if (getcwd(cwd, sizeof(cwd)) != NULL)
	{
		exit_code = 0;
		printf("%s\n", cwd);
	}
	else
		exit_code = 1;
}
BJS = $(SRCS:.c=.o)
INCLUDES = includes
FLAGS = #-Wall -Wextra -Werror

%.o: %.c
	gcc $(FLAGS) -g -Ilibft -I/Users/jtollena/.brew/opt/readline/include -I$(INCLUDES) -c $< -o $@

all: $(NAME)

clean:
	rm $(OBJS)
	
$(NAME): $(OBJS) $(INCLUDES)
	make -C libft/
	gcc $(FLAGS) -g -Llibft -lft -L/Users/jtollena/.brew/opt/readline/lib -lreadline $(OBJS) -o $(NAME)
	make clean

fclean: clean
	rm $(NAME)

re: fclean $(NAME)

.PHONY: re fclean clean allMakefile
